{
	"compilerOptions": {
		"moduleResolution": "bundler",
		"module": "ESNext",
		"target": "ESNext",
		"types": ["@types/node"],
		"lib": ["DOM", "ESNext"],
		"strict": true,
		"jsx": "preserve",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"skipLibCheck": true,
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"~/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "src/types/**/*.d.ts"],
	"exclude": ["node_modules"]
}
