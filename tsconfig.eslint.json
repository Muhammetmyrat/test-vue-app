{
	"extends": "./tsconfig.json",
	"include": [
		"vite.config.ts",
		"eslint.config.ts",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/shims-vue.d.ts"
	],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"jsx": "preserve",
		"moduleResolution": "Node",
		"types": ["vite/client"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"preserveSymlinks": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./src/*"]
		}
	}
}
